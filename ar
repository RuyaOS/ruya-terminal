change_language()
{
if [ -e "$HOME/.shelllang" ]
    then   
        detected_language=$(cat $HOME/.shelllang)
    else
        detected_language=""
fi        
if [ "$detected_language" = "$language_code" ]
    then
            ar_disable
            rm -f $HOME/.shelllang
    else
            ar_enable
            echo "ar" > $HOME/.shelllang
fi
if [ "$(ps -p $(ps -p $(echo $$) -o ppid=) -o comm=)" = "bicon.bin" ]; then            
echo "Language Changed تم تبديل اللغة"; else
echo "Language Changed تم تبديل اللغة" | fribidi
fi
}
bind -x '"\e[24~":change_language'
